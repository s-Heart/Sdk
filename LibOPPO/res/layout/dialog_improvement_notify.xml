<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dialog_margin_left"
    android:layout_marginRight="@dimen/dialog_margin_right"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nmgc_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_bar_height"
        android:background="#FFDDDDDD"
        android:gravity="center"
        android:text="@string/improvement_notify_title"
        android:textSize="@dimen/a_text_size"
    	android:textColor="#4c4d4d" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_divider"
        android:contentDescription="@null" />

    <RelativeLayout
        android:background="@drawable/rank_listitem_bg"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/nmgc_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dialog_improvement_notify_text_margin_horizontal"
            android:layout_marginRight="@dimen/dialog_improvement_notify_text_margin_horizontal"
            android:layout_marginTop="@dimen/dialog_improvement_notify_text_margin_top"
            android:text="@string/improvement_notify_content"
            android:textSize="@dimen/j_text_size"
    		android:textColor="#4c4d4d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nmgc_dialog_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dialog_improvement_notify_text_margin_top"
            
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/nmgc_dialog_btn_confirm"
                android:layout_width="@dimen/dialog_confirm_btn_width"
                android:layout_height="@dimen/dialog_confirm_btn_height"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/nmgc_orange_button_selector"
                android:text="@string/improvement_notify_title"
                android:textSize="@dimen/o_text_size"
    			android:textColor="#4c4d4d" />

            <Button
                android:id="@+id/nmgc_dialog_btn_cancel"
                android:layout_width="@dimen/dialog_confirm_btn_width"
                android:layout_height="@dimen/dialog_confirm_btn_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dialog_confirm_btn_margin_each"
                android:background="@drawable/nmgc_orange_button_selector"
                android:text="@string/fragment_btn_later"
                android:textSize="@dimen/o_text_size"
    			android:textColor="#4c4d4d" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>