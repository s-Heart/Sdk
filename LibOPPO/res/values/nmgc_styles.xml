<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="nmgc_progress_bar">
        <item name="android:indeterminateDrawable">@anim/visitor_login_loading</item>
        <item name="android:minWidth">@dimen/nmgc_loading_progress_size</item>
        <item name="android:maxWidth">@dimen/nmgc_loading_progress_size</item>
        <item name="android:minHeight">@dimen/nmgc_loading_progress_size</item>
        <item name="android:maxHeight">@dimen/nmgc_loading_progress_size</item>
    </style>

    <style name="nmgc_common_dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/rank_listitem_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="nmgc_dialog_center" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="nmgc_common_text">
        <item name="android:textSize">@dimen/nmgc_login_common_text_size</item>
        <item name="android:textColor">#1a1a1a</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="nmgc_login_button_text">
        <item name="android:textSize">@dimen/nmgc_login_button_text_size</item>
        <item name="android:textColor">#3e3e3e</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="nmgc_activitynotfloat">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 全屏幕拉伸 -->
    <style name="nmgc_layout_full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <!-- 固定自身大小 -->
    <style name="nmgc_layout_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 横向分布 -->
    <style name="nmgc_layout_horizontal" parent="nmgc_layout_full">
        <item name="android:layout_width">0dp</item>
    </style>
    <!-- 纵向分布 -->
    <style name="nmgc_layout_vertical" parent="nmgc_layout_full">
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="nmgc_base_textview_wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="nmgc_base_textview_fill">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="nmgc_boy_click_dialog_text" parent="nmgc_base_textview_wrap">
        <item name="android:textSize">@dimen/nmgc_login_common_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#331903</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:clickable">true</item>
    </style>
    
    
    <style name="Theme.Dialog.Custom" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="Theme.Dialog.Custom.SwitchAccount">
        <item name="android:height">@dimen/dialog_switch_account_height</item>
        <item name="android:width">@dimen/dialog_confirm_width</item>
    </style>
    
    <style name="Theme.Dialog.Custom.SwitchAccount.Three">
        <item name="android:height">@dimen/dialog_switch_account_height_three</item>
        <item name="android:width">@dimen/dialog_confirm_width</item>
    </style>
    
    <!-- kebi -->
    <style name="nmgc_kebi_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#464a4a</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowColor">#ffffffff</item>
    </style>
    
    <style name="nmgc_kebi_close">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#535a5a</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowColor">#ffffffff</item>
    </style>
    
    <style name="nmgc_kebi_accout_pre">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#494949</item>
    </style>
    
    <style name="nmgc_kebi_accout_info">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#494949</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="nmgc_kebi_hint_orange">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#0b984b</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="nmgc_kebi_hint_number">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#494949</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="nmgc_kebi_ok">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#f4f4f4</item>
        <item name="android:singleLine">true</item>
    </style>
    
    
</resources>