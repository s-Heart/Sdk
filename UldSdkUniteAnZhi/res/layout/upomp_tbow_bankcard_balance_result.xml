<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_add_result"
	android:background="@color/anzhi_c00000000"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			>
			<RelativeLayout
				android:id="@+id/rl_result_title"
				android:background="@drawable/upomp_tbow_card_info_title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15.0dip"
				android:layout_marginTop="20.0dip"
				android:layout_marginRight="15.0dip"
				>
				<TextView
					android:textSize="20.0sp"
					android:textColor="@color/anzhi_cFFFFFFFF"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10.0dip"
					android:text="@string/yl_lookafter_yue"
					android:layout_centerVertical="true"
					>
				</TextView>
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/rl_check_success"
				
				android:background="@drawable/upomp_tbow_card_info_bg"
				android:paddingBottom="8.0dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15.0dip"
				android:layout_marginRight="15.0dip"
				android:layout_below="@+id/rl_result_title"
				>
				<TextView
					android:textSize="15.0sp"
					android:textColor="@color/anzhi_cFF000000"
					android:id="@+id/tv_check_success"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10.0dip"
					android:layout_marginTop="3.0dip"
					android:layout_marginRight="10.0dip"
					android:text="@string/yl_lookafter_yue_success"
					>
				</TextView>
				<TextView
					android:textSize="15.0sp"
					android:textColor="@color/anzhi_cFF000000"
					android:id="@+id/tv_user_balance"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10.0dip"
					android:layout_marginTop="3.0dip"
					android:layout_marginRight="10.0dip"
					android:text="@string/yl_lookafter_yue_wei"
					android:layout_below="@+id/tv_check_success"
					>
				</TextView>
			</RelativeLayout>
			
			<RelativeLayout
				android:gravity="top"
				android:visibility="gone"
				android:id="@+id/rl_check_failure"
				android:paddingBottom="8.0dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15.0dip"
				android:layout_marginRight="15.0dip"
				android:background="@drawable/upomp_tbow_card_info_bg"
				android:layout_below="@+id/rl_check_success"
				>
				<TextView
					android:textSize="15.0sp"
					android:textColor="@color/anzhi_cFF000000"
					android:id="@+id/tv_check_failure"
					android:layout_marginTop="3.0dip"
					android:layout_marginLeft="10.0dip"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/yl_lookafter_yue_faild"
					>
				</TextView>
				<TextView
					android:textSize="15.0sp"
					android:textColor="@color/anzhi_cFF000000"
					android:id="@+id/tv_check_failure_reason"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="3.0dip"
					android:layout_marginLeft="10.0dip"
					android:text="@string/yl_lookafter_yue_faild_reason"
					android:layout_below="@+id/tv_check_failure"
					>
				</TextView>
			</RelativeLayout>
			<RelativeLayout
				android:gravity="center"
				android:id="@+id/rl_btn_back"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15.0dip"
				android:layout_marginTop="20.0dip"
				android:layout_marginRight="15.0dip"
				android:layout_below="@+id/rl_check_failure"
				>
				<Button
					android:textSize="20.0sp"
					android:textColor="@color/anzhi_cFFFFFFFF"
					android:id="@+id/btn_back"
					android:background="@drawable/upomp_tbow_btn_esc"
					android:layout_width="wrap_content"
					android:layout_height="40.0dip"
					android:text="@string/yl_return"
					>
				</Button>
			</RelativeLayout>
		</RelativeLayout>
	</ScrollView>
</LinearLayout>
