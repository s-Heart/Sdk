<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_20" >

            <RelativeLayout
                android:id="@+id/anzhi_chongzhi_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_48"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/anzhi_textview_normal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_48"
                    android:layout_centerVertical="true"
                    android:background="@android:color/white" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/size_10"
                        android:text="@string/anzhi_anzhicurrency_pay"
                        android:textColor="@color/anzhi_494949"
                        android:textSize="@dimen/font_18" />

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/anzhi_arrow_right" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/chongzhi_log_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_48"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/anzhi_textview_normal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_48"
                    android:layout_centerVertical="true"
                    android:background="@android:color/white" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/size_10"
                        android:text="@string/title_currency_history"
                        android:textColor="@color/anzhi_494949"
                        android:textSize="@dimen/font_18" />

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/anzhi_arrow_right" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/xiaofei_log_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_48"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/anzhi_textview_normal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_48"
                    android:layout_centerVertical="true"
                    android:background="@android:color/white" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/size_10"
                        android:text="@string/title_consum_history"
                        android:textColor="@color/anzhi_494949"
                        android:textSize="@dimen/font_18" />

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/anzhi_arrow_right" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_charge_pwd_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_48"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/anzhi_textview_normal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_48"
                    android:layout_centerVertical="true"
                    android:background="@android:color/white" >

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/anzhi_arrow_right" />

                    <TextView
                        android:id="@+id/setting_textview"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/size_10"
                        android:gravity="left"
                        android:text="@string/title_set_paypwd"
                        android:textColor="@color/anzhi_494949"
                        android:textSize="@dimen/font_18" />

                    <TextView
                        android:id="@+id/iv_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/iv"
                        android:text="@string/no_has_setted" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/update_pwd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_textview"
                android:layout_margin="@dimen/size_20"
                android:singleLine="true"
                android:text="@string/anzhi_modify_paypwd"
                android:textColor="@color/anzhi_eb9100"
                android:textSize="@dimen/font_18"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>