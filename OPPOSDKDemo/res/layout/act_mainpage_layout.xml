<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget32"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏APP"
            android:textColor="@color/green"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/left"
            android:layout_width="320dp"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="当前用户: 加载中..."
                    android:textColor="@color/green"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="N宝余额: 加载中..."
                    android:textColor="@color/green"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/gameaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="游戏余额: 500草莓"
                    android:textColor="@color/green"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nmgc_button_selector"
                    android:padding="10dp"
                    android:text="刷新" />

                <Button
                    android:id="@+id/charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nmgc_button_selector"
                    android:padding="10dp"
                    android:text="充N宝" />

                <Button
                    android:id="@+id/gamecharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nmgc_button_selector"
                    android:padding="10dp"
                    android:text="N宝购买" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shangcheng"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商城"
            android:textColor="@color/red" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/money" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="道具"
                    android:textColor="@color/green"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="价格: 100草莓"
                    android:textColor="@color/lightgray"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nmgc_button_selector"
                android:padding="10dp"
                android:text="RMB购买" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/shangcheng"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享和论坛"
            android:textColor="@color/red" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <Button
            android:id="@+id/forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nmgc_button_selector"
            android:padding="10dp"
            android:text="游戏论坛" />

        <Button
            android:id="@+id/relogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nmgc_button_selector"
            android:padding="10dp"
            android:text="重新登录" />
        <Button
            android:id="@+id/opengamecenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nmgc_button_selector"
            android:padding="10dp"
            android:text="游戏中心" />
        <Button
            android:id="@+id/openprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nmgc_button_selector"
            android:padding="10dp"
            android:text="个人信息" />
    </LinearLayout>

</LinearLayout>