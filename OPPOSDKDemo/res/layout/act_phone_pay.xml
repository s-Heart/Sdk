        android:layout_y="100dp"
        android:text="充值10元您将获得100元宝"
        android:textColor="@color/red" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="48dp"
        android:layout_y="152dp"
        android:text="10元" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="132dp"
        android:layout_y="152dp"
        android:text="20元" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="212dp"
        android:layout_y="149dp"
        android:text="30元" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="48dp"
        android:layout_y="220dp"
        android:text="40元" />

    <Button
        android:id="@+id/Button05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="132dp"
        android:layout_y="220dp"
        android:text="50元" />

    <Button
        android:id="@+id/Button06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="216dp"
        android:layout_y="220dp"
        android:text="60元" />

    <Button
        android:id="@+id/ok"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_x="88dp"
        android:layout_y="288dp"
        android:text="确定" />

    <TextView
        android:id="@+id/chongzhimiane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="108dp"
        android:layout_y="56dp"
        android:textColor="@color/white" />

</AbsoluteLayout>