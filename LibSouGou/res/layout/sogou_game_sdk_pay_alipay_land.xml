<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/sogou_game_sdk_white"
    android:focusable="true"  
    android:focusableInTouchMode="true"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/sogou_game_sdk_alipay_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="192dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/sogou_game_sdk_pay_ali" />

        <TextView
            android:id="@+id/sogou_game_sdk_alipay_user"
            style="@style/sogou_game_sdk_pay_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sogou_game_sdk_alipay_icon"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="14dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/sogou_game_sdk_pay_alipay_user" />

        <TextView
            android:id="@+id/sogou_game_sdk_alipay_money"
            style="@style/sogou_game_sdk_pay_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sogou_game_sdk_alipay_user"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="7dp"
            android:text="@string/sogou_game_sdk_pay_alipay_money" />

        <TextView
            android:id="@+id/sogou_game_sdk_alipay_goods"
            style="@style/sogou_game_sdk_pay_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sogou_game_sdk_alipay_money"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="7dp"
            android:text="@string/sogou_game_sdk_pay_alipay_goods" />

        <EditText
            android:id="@+id/sogou_game_sdk_alipay_input"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sogou_game_sdk_alipay_goods"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="16dp"
            android:maxLength="6"
            android:background="@drawable/sogou_game_sdk_input_bg"
            android:inputType="number"
            android:hint="@string/sogou_game_sdk_pay_ali_other_amount"
            android:padding="5dp"
            android:imeOptions="actionGo"
            android:textSize="12sp"
            android:singleLine="true" />

        <Button
            android:id="@+id/sogou_game_sdk_alipay_pay_ok"
            style="@style/sogou_game_sdk_pay_bt_red"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sogou_game_sdk_alipay_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/sogou_game_sdk_bt_red"
            android:text="@string/sogou_game_sdk_pay_confirm" />

        <TextView
            android:id="@+id/sogou_game_sdk_pay_links_feedback"
            style="@style/sogou_game_sdk_pay_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sogou_game_sdk_alipay_pay_ok"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:paddingBottom="20dp"       
            android:text="@string/sogou_game_sdk_pay_feedback" />
    </RelativeLayout>

</ScrollView>