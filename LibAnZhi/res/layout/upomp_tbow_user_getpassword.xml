<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@color/anzhi_c00000000"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="10.0dip"
		>
		<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
			>
			
			<!-- 登录和注册按钮 -->
			
		<LinearLayout
				android:id="@+id/layout_twobutton_title"
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginTop="0dip"
				android:gravity="center_vertical"
				
    	>        
 			<Button 
 					android:id="@+id/btn_back_login"
 					android:background="@drawable/upomp_tbow_sub1_default"
					android:textSize="17.0sp"
					android:textColor="@color/anzhi_cFFFFFFFF"
					android:layout_width="0px"
					android:layout_height="wrap_content"
					android:text="@string/yl_load"
					android:layout_weight="1"
					android:layout_marginLeft="15.0dip"
        	/>  
 			<Button 
        			android:id="@+id/btn_back_register"
        			android:background="@drawable/upomp_tbow_sub3_default"
					android:textSize="17.0sp"
					android:textColor="@color/anzhi_cFFFFFFFF"
					android:layout_width="0px"
					android:layout_height="wrap_content"
					android:text="@string/yl_zhuce1"
					android:layout_weight="1"
					android:layout_marginRight="15.0dip"
        	/> 
	</LinearLayout>
	
		<!-- 找回密码 -->
		<RelativeLayout
				android:id="@+id/layout_getpassword"
				
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="3.0dip"
				android:layout_below="@+id/layout_twobutton_title"
				>
				<RelativeLayout
					android:id="@+id/layout_username"
					android:background="@drawable/upomp_tbow_checkbox"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15.0dip"
					android:layout_marginRight="15.0dip"
					>
					<RelativeLayout
						android:id="@+id/layout_in_tv_username"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						>
						<TextView
							android:textSize="15.0sp"
							android:textColor="@color/anzhi_cFF000000"
							android:gravity="center"
							android:id="@+id/tv_username"
							android:layout_width="wrap_content"
							android:layout_height="40.0dip"
							android:layout_marginLeft="10.0dip"
							android:text="@string/yl_user_name1"
							>
						</TextView>
					</RelativeLayout>
					<RelativeLayout
						android:id="@+id/layout_in_et_username"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5.0dip"
						android:layout_marginRight="5.0dip"
						android:layout_toRightOf="@+id/layout_in_tv_username"
						>
						<EditText
							android:textSize="15.0sp"
							android:background="@color/anzhi_c00000000"
							android:textColor="@color/anzhi_cFF000000"
							android:id="@+id/et_username"
							android:layout_width="fill_parent"
							android:layout_height="40.0dip"
							android:hint="@string/yl_6char"
							android:singleLine="true"
							>
						</EditText>
					</RelativeLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/layout_phonenum"
					android:background="@drawable/upomp_tbow_checkbox"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15.0dip"
					android:layout_marginTop="3.0dip"
					android:layout_marginRight="15.0dip"
					android:layout_below="@+id/layout_username"
					>
					<RelativeLayout
						android:id="@+id/layout_in_tv_phonenum"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						>
						<TextView
							android:textSize="15.0sp"
							android:textColor="@color/anzhi_cFF000000"
							android:gravity="center"
							android:id="@+id/tv_phonenum"
							android:layout_width="wrap_content"
							android:layout_height="40.0dip"
							android:layout_marginLeft="10.0dip"
							android:text="@string/yl_m_n"
							>
						</TextView>
					</RelativeLayout>
					<RelativeLayout
						android:id="@+id/layout_et_tv_phonenum"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5.0dip"
						android:layout_marginRight="5.0dip"
						android:layout_toRightOf="@+id/layout_in_tv_phonenum"
						>
						<EditText
							android:textSize="15.0sp"
							android:background="@color/anzhi_c00000000"
							android:textColor="@color/anzhi_cFF000000"
							android:id="@+id/et_phonenum"
							android:layout_width="fill_parent"
							android:layout_height="40.0dip"
							android:hint="@string/yl_tel_num2"
							android:singleLine="true"
							android:maxLength="11"
							android:numeric="integer" android:inputType="phone" android:digits="0123456789"
							>
						</EditText>
					</RelativeLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/layout_shortmessage_verify"
					android:background="@drawable/upomp_tbow_checkbox"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15.0dip"
					android:layout_marginTop="3.0dip"
					android:layout_marginRight="15.0dip"
					android:layout_below="@+id/layout_phonenum"
					>
					<RelativeLayout
						android:id="@+id/layout_tv_shortmessage_verify"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						>
						<TextView
							android:textSize="15.0sp"
							android:textColor="@color/anzhi_cFF000000"
							android:gravity="center"
							android:id="@+id/tv_shortmessage_verify"
							android:layout_width="wrap_content"
							android:layout_height="40.0dip"
							android:layout_marginLeft="10.0dip"
							android:text="@string/yl_mail_name1"
							>
						</TextView>
					</RelativeLayout>
					<RelativeLayout
						android:id="@+id/layout_et_shortmessage_verify"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5.0dip"
						android:layout_marginRight="0.0dip"
						android:layout_toRightOf="@+id/layout_tv_shortmessage_verify"
						>
						<EditText
							android:textSize="15.0sp"
							android:background="@color/anzhi_c00000000"
							android:textColor="@color/anzhi_cFF000000"
							android:id="@+id/et_shortmessage_verify"
							android:layout_width="130.0dip"
							android:layout_height="40.0dip"
							android:hint="@string/yl_six_smail_yanzheng"
							android:singleLine="true"
							android:maxLength="6"
							android:numeric="integer" android:inputType="phone" android:digits="0123456789"
							>
						</EditText>
						<Button
							android:textSize="15.0dip"
							android:textColor="@color/anzhi_cFF000000"
							android:id="@+id/btn_shortmessage_verify"
							android:background="@drawable/upomp_tbow_input_btn4"
							android:layout_width="fill_parent"
							android:layout_height="40.0dip"
							android:layout_marginLeft="5.0dip"
							android:text="@string/yl_get"
							android:layout_toRightOf="@+id/et_shortmessage_verify"
							>
						</Button>
					</RelativeLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/layout_verify_num"
					android:background="@drawable/upomp_tbow_checkbox"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15.0dip"
					android:layout_marginTop="3.0dip"
					android:layout_marginRight="15.0dip"
					android:layout_below="@+id/layout_shortmessage_verify"
					android:layout_alignParentRight="true"
					>
					<RelativeLayout
						android:id="@+id/layout_tv_verify_num"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						>
						<TextView
							android:textSize="15.0sp"
							android:textColor="@color/anzhi_cFF000000"
							android:gravity="center"
							android:id="@+id/tv_verify_num"
							android:layout_width="wrap_content"
							android:layout_height="40.0dip"
							android:layout_marginLeft="10.0dip"
							android:text="@string/yl_jiaoyanma"
							>
						</TextView>
					</RelativeLayout>
					<RelativeLayout
						android:id="@+id/layout_et_verify_num"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5.0dip"
						android:layout_marginRight="2.0dip"
						android:layout_toRightOf="@+id/layout_tv_verify_num"
						>
						<EditText
							android:textSize="15.0sp"
							android:background="@color/anzhi_c00000000"
							android:textColor="@color/anzhi_cFF000000"
							android:id="@+id/et_verify_num"
							android:layout_width="120.0dip"
							android:layout_height="40.0dip"
							android:singleLine="true"
							android:maxLength="4"
							android:numeric="integer" android:inputType="phone" android:digits="0123456789"
							>
						</EditText>
						<ImageView
							android:id="@+id/img_verify_num"
							android:layout_width="fill_parent"
							android:layout_height="40.0dip"
							android:layout_marginLeft="5.0dip"
							android:layout_toRightOf="@+id/et_verify_num"
							>
						</ImageView>
						<ProgressBar
							android:id="@+id/verify_num_progress"
							android:visibility="invisible"
							android:layout_width="30.0dip"
							android:layout_height="30.0dip"
							android:layout_marginLeft="30.0dip"
							android:layout_marginTop="5.0dip"
							android:indeterminateDrawable="@drawable/verify_progress"
							android:layout_toRightOf="@+id/et_verify_num"
							>
						</ProgressBar>
					</RelativeLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/layout_btn_verify_num"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20.0dip"
					android:layout_below="@+id/layout_verify_num"
					>
					<Button
						android:textSize="20.0sp"
						android:textColor="@color/anzhi_cFFFFFFFF"
						android:gravity="center"
						android:id="@+id/btn_next"
						android:background="@drawable/upomp_tbow_btn_enter"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="30.0dip"
						android:layout_marginRight="30.0dip"
						android:text="@string/yl_next"
						android:layout_centerHorizontal="true"
						>
					</Button>
				</RelativeLayout>
			</RelativeLayout>
			
			<!-- 得到安全问题 -->
			<RelativeLayout
				android:id="@+id/layout_getpassword_question_newpassword"
				android:visibility="gone"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="3.0dip"
				android:layout_below="@+id/layout_twobutton_title"
				>
				<RelativeLayout
					android:id="@+id/layout_getpassword_question"
					android:background="@drawable/upomp_tbow_checkbox"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15.0dip"
					android:layout_marginRight="15.0dip"
					>
					<RelativeLayout
						android:id="@+id/layout_tv_getpassword_question"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						>
						<TextView
							android:textSize="15.0sp"
							android:textColor="@color/anzhi_cFF000000"
							android:gravity="center"
							android:id="@+id/tv_getpassword_question"
							android:layout_width="wrap_content"
							android:layout_height="40.0dip"
							android:layout_marginLeft="10.0dip"
							android:text="@string/yl_new_psw"
							>
						</TextView>
					</RelativeLayout>
					<RelativeLayout
						android:id="@+id/layout_tv_getpassword_question_text"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5.0dip"
						android:layout_marginRight="5.0dip"
						android:layout_toRightOf="@+id/layout_tv_getpassword_question"
						>
						<TextView
							android:textSize="15.0sp"
							android:textColor="@color/anzhi_cFF000000"
							android:gravity="center"
							android:id="@+id/tv_getpassword_question_text"
							android:layout_width="fill_parent"
							android:layout_height="40.0dip"
							android:singleLine="true"
							>
						</TextView>
					</RelativeLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/layout_getpassword_question_answer"
					android:background="@drawable/upomp_tbow_checkbox"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15.0dip"
					android:layout_marginTop="3.0dip"
					android:layout_marginRight="15.0dip"
					android:layout_below="@+id/layout_getpassword_question"
					>
					<RelativeLayout
						android:id="@+id/layout_tv_getpassword_question_answer"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						>
						<TextView
							android:textSize="15.0sp"
							android:textColor="@color/anzhi_cFF000000"
							android:gravity="center"
							android:id="@+id/tv_getpassword_question_answer"
							android:layout_width="wrap_content"
							android:layout_height="40.0dip"
							android:layout_marginLeft="10.0dip"
							android:text="@string/yl_anquan_daan"
							>
						</TextView>
					</RelativeLayout>
					<RelativeLayout
						android:id="@+id/layout_et_getpassword_question_answer"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5.0dip"
						android:layout_marginRight="5.0dip"
						android:layout_toRightOf="@+id/layout_tv_getpassword_question_answer"
						>
						<EditText
							android:textSize="15.0sp"
							android:background="@color/anzhi_c00000000"
							android:textColor="@color/anzhi_cFF000000"
							android:gravity="center"
							android:id="@+id/et_getpassword_question_answer"
							android:layout_width="fill_parent"
							android:layout_height="40.0dip"
							android:hint="@string/yl_2_dfg"
							android:singleLine="true"
							>
						</EditText>
					</RelativeLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/layout_newpassword"
					android:background="@drawable/upomp_tbow_checkbox"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15.0dip"
					android:layout_marginTop="3.0dip"
					android:layout_marginRight="15.0dip"
					android:layout_below="@+id/layout_getpassword_question_answer"
					>
					<RelativeLayout
						android:id="@+id/layout_tv_newpassword"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						>
						<TextView
							android:textSize="15.0sp"
							android:textColor="@color/anzhi_cFF000000"
							android:gravity="center"
							android:id="@+id/tv_newpassword"
							android:layout_width="wrap_content"
							android:layout_height="40.0dip"
							android:layout_marginLeft="10.0dip"
							android:text="@string/yl_new_psw"
							>
						</TextView>
					</RelativeLayout>
					<RelativeLayout
						android:id="@+id/layout_btn_newpassword"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5.0dip"
						android:layout_marginRight="5.0dip"
						android:layout_toRightOf="@+id/layout_tv_newpassword"
						>
						<Button
							android:textColor="@color/anzhi_cFF000000"
							android:gravity="center"
							android:id="@+id/btn_newpassword"
							android:background="@color/anzhi_c00000000"
							android:layout_width="fill_parent"
							android:layout_height="40.0dip"
							android:layout_marginRight="5.0dip"
							android:hint="@string/yl_6_12_char"
							>
						</Button>
					</RelativeLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/layout_newpassword_again"
					android:background="@drawable/upomp_tbow_checkbox"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15.0dip"
					android:layout_marginTop="3.0dip"
					android:layout_marginRight="15.0dip"
					android:layout_below="@+id/layout_newpassword"
					>
					<RelativeLayout
						android:id="@+id/layout_tv_newpassword_again"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						>
						<TextView
							android:textSize="15.0sp"
							android:textColor="@color/anzhi_cFF000000"
							android:gravity="center"
							android:id="@+id/tv_newpassword_again"
							android:layout_width="wrap_content"
							android:layout_height="40.0dip"
							android:layout_marginLeft="10.0dip"
							android:text="@string/yl_queren_new_psw"
							>
						</TextView>
					</RelativeLayout>
					<RelativeLayout
						android:id="@+id/layout_newpassword_again"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5.0dip"
						android:layout_marginRight="5.0dip"
						android:layout_toRightOf="@+id/layout_tv_newpassword_again"
						>
						<Button
							android:textColor="@color/anzhi_cFF000000"
							android:gravity="center"
							android:id="@+id/btn_newpassword_again"
							android:background="@color/anzhi_c00000000"
							android:layout_width="fill_parent"
							android:layout_height="40.0dip"
							android:layout_marginRight="5.0dip"
							android:hint="@string/yl_6_12_char"
							>
						</Button>
					</RelativeLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/layout_btn_confirm"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20.0dip"
					android:layout_below="@+id/layout_newpassword_again"
					>
					<Button
						android:textSize="20.0sp"
						android:textColor="@color/anzhi_cFFFFFFFF"
						android:gravity="center"
						android:background="@drawable/upomp_tbow_btn_enter"
						android:id="@+id/btn_confirm"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="30.0dip"
						android:layout_marginRight="30.0dip"
						android:text="@string/yl_is_ok"
						android:layout_centerHorizontal="true"
						>
					</Button>
				</RelativeLayout>
			</RelativeLayout>
		
		<!--  -->
			
		</RelativeLayout>
	</ScrollView>

	
</LinearLayout>
