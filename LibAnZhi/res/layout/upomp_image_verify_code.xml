<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tbow_pay_7F0702F7"
	android:background="@drawable/upomp_tbow_checkbox"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
	<!-- 	android:layout_below="@id/tbow_pay_7F0702EF" -->
	<RelativeLayout
		android:id="@+id/tbow_pay_7F0702F8"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		>
		<TextView
			android:textSize="15.0sp"
			android:textColor="@color/anzhi_cFF000000"
			android:id="@+id/tbow_pay_7F0702F9"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10.0dip"
			android:text="@string/yl_jiaoyanma"
			>
		</TextView>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/tbow_pay_7F0702FA"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5.0dip"
		android:layout_marginRight="2.0dip"
		android:layout_toRightOf="@+id/tbow_pay_7F0702F8"
		>
		<EditText
			android:textSize="15.0sp"
			android:textColor="@color/anzhi_cFF000000"
			android:id="@+id/editText_verify_code"
			android:background="@color/anzhi_c00000000"
			android:layout_width="110.0dip"
			android:layout_height="40.0dip"
			android:singleLine="true"
			android:maxLength="4"
			android:numeric="integer" android:inputType="phone" android:digits="0123456789"
			>
		</EditText>
		<ImageView
			android:id="@+id/imageView_verify_code"
			android:layout_width="fill_parent"
			android:layout_height="40.0dip"
			android:layout_marginLeft="5.0dip"
			android:layout_marginRight="5.0dip"
			android:layout_toRightOf="@+id/editText_verify_code"
			>
		</ImageView>
		<ProgressBar
			android:id="@+id/progressBar_verify_code"
			android:visibility="gone"
			android:layout_width="30.0dip"
			android:layout_height="30.0dip"
			android:layout_marginLeft="30.0dip"
			android:layout_marginTop="5.0dip"
			android:indeterminateDrawable="@drawable/verify_progress"
			android:layout_toRightOf="@+id/editText_verify_code"
			android:layout_centerVertical="true"
			>
		</ProgressBar>
	</RelativeLayout>
</RelativeLayout>