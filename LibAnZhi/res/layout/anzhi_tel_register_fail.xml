<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/anzhi_filled_box"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_account_find_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_5"
            android:layout_marginTop="@dimen/size_20"
            android:textSize="@dimen/font_18" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20" >

            <Button
                android:id="@+id/bt_try_again"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_40"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dip"
                android:layout_weight="0.5"
                android:background="@drawable/anzhi_button_bg_gray"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_18" />

            <Button
                android:id="@+id/bt_normal_reigster"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_40"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dip"
                android:layout_weight="0.5"
                android:background="@drawable/anzhi_button_bg_green"
               
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_18" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>