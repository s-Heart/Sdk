        <ListView
              android:layout_width="fill_parent"
           android:layout_height="@dimen/size_150"
            android:divider="@null"
            android:id="@+id/container"
            android:cacheColorHint="#00000000"
               android:fadingEdge="none"
        android:scrollbars="none"
       
             />
        -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:paddingTop="5dp"
            android:layout_height="@dimen/size_150"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/notice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:layout_marginLeft="@dimen/size_10"
                android:singleLine="false"
                android:scrollbars="vertical"
                android:textColor="@color/anzhi_EB9100"
                android:textSize="@dimen/font_16" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_look_detail"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_16"
            android:layout_marginLeft="@dimen/size_50"
            android:layout_marginRight="@dimen/size_50"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/anzhi_button_bg_green"
            android:text="@string/anzhi_look_notice_detail"
            android:textColor="@color/anzhi_FFFFFF"
            android:textSize="@dimen/font_18" />
    </LinearLayout>

</RelativeLayout>