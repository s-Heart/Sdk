<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/actionbar"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size_50" >

            <LinearLayout
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_35"
                android:layout_centerInParent="true" >

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginTop="@dimen/size_5"
                    android:paddingRight="@dimen/size_5"
                    android:text="@string/title_notice"
                    android:textColor="@color/anzhi_494949"
                    android:textSize="@dimen/size_20" />
            </LinearLayout>

          

                <ImageView
                     android:layout_alignParentRight="true"
                     android:layout_alignParentTop="true"
                      android:id="@+id/iv_pay_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_5"
                    android:layout_marginTop="@dimen/size_5"
                    android:src="@drawable/anzhi_clear_account" />
           

            <Button
                android:id="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btn_back"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/anzhi_logo"
                android:clickable="false"
                android:focusable="false" />
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:background="@color/anzhi_D6D6D6" />
        <!--
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="fill_parent"
              android:orientation="vertical"
            android:layout_height="@dimen/size_150" >
            
        </LinearLayout>
        -->


