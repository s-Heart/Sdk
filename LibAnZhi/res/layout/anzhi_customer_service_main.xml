<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/waitou_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="@dimen/size_20" >

        <LinearLayout
            android:id="@+id/tab_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/anzhi_F9F9F1" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_com_problem"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_30"
                    android:background="@color/anzhi_F9F9F1"
                    android:gravity="center"
                    android:text="@string/anzhi_common_problem"
                    android:textSize="@dimen/font_16" />

                <View
                    android:id="@+id/divider_left"
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="@color/anzhi_D6D6D6" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/anzhi_divider" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_submit_feedback"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_30"
                    android:background="@color/anzhi_F9F9F1"
                    android:gravity="center"
                    android:text="@string/anzhi_submit_feedback"
                    android:textColor="@color/anzhi_b2231d"
                    android:textSize="@dimen/font_16" />

                <View
                    android:id="@+id/divider_center"
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="@color/anzhi_b2231d" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/anzhi_divider" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_my_feedback"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_30"
                    android:background="@color/anzhi_F9F9F1"
                    android:gravity="center"
                    android:text="@string/anzhi_my_feedback"
                    android:textSize="@dimen/font_16" />

                <View
                    android:id="@+id/divider_right"
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="@color/anzhi_D6D6D6" />
            </LinearLayout>
        </LinearLayout>

        <com.anzhi.usercenter.sdk.ScrollGallery
            android:id="@+id/ViewFlipper1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tab_layout"
            android:spacing="@dimen/size_10" >
        </com.anzhi.usercenter.sdk.ScrollGallery>
    </RelativeLayout>

</RelativeLayout>