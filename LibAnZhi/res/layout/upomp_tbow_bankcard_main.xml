<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/anzhi_c00000000"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
		<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:fillViewport="true"
		android:fadingEdge="none"
		>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			>
			
			<RelativeLayout
				android:id="@+id/layout_bankcard_main"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20.0dip"
				>
				<RelativeLayout
					android:id="@+id/layout_mycard_list"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					>
					<RelativeLayout
						android:id="@+id/layout_tv_cardlist_title"
						android:background="@drawable/upomp_tbow_card_info_title"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15.0dip"
						android:layout_marginRight="15.0dip"
						>
						<TextView
							android:textSize="18.0sp"
							android:textColor="@color/anzhi_cFFFFFFFF"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10.0dip"
							android:text="@string/yl_binded_card"
							android:layout_centerVertical="true"
							>
						</TextView>
					</RelativeLayout>
					
					<RelativeLayout
						android:id="@+id/layout_tv_nocardlist_title"
						android:background="@drawable/upomp_tbow_card_info_bg"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15.0dip"
						android:layout_marginRight="15.0dip"
						android:layout_below="@+id/layout_tv_cardlist_title"
						>
						<TextView
							android:textSize="20.0dip"
							android:textColor="@color/anzhi_c9F9C9C9C"
							android:gravity="center"
							android:id="@+id/tv_no_card"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="@string/yl_no_binded_card"
							>
						</TextView>
					</RelativeLayout>
				</RelativeLayout>
				
				<!-- 有关联卡的界面 -->
				<RelativeLayout
					android:id="@+id/layout_bankcard_main_hadcard"
					android:visibility="gone"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@color/anzhi_cFFD3D2D2"
					>
					<RelativeLayout
						android:id="@+id/tv_bankcard_hadcard_title"
						android:background="@drawable/upomp_tbow_card_info_title"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15.0dip"
						android:layout_marginRight="15.0dip"
						>
						<TextView
							android:textSize="18.0sp"
							android:textColor="@color/anzhi_cFFFFFFFF"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10.0dip"
							android:text="@string/yl_binded_card"
							android:layout_centerVertical="true"
							>
						</TextView>
					</RelativeLayout>
					<com.unionpay.upomp.tbow.utils.MyListView
						android:id="@+id/listview_user_cardlist"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15.0dip"
						android:layout_marginRight="15.0dip"
						android:layout_below="@+id/tv_bankcard_hadcard_title"
						android:fadingEdge="none"
						android:layout_centerVertical="true"
						>
					</com.unionpay.upomp.tbow.utils.MyListView>
				</RelativeLayout>
				
			</RelativeLayout>
			
			<RelativeLayout
				android:id="@+id/layout_btn_addcard"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5.0dip"
				android:layout_below="@+id/layout_bankcard_main"
				>
				<Button
					android:textSize="20.0sp"
					android:textColor="@color/anzhi_cFFFFFFFF"
					android:id="@+id/btn_addcard"
					android:background="@drawable/upomp_tbow_btn_enter"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/yl_add_yingh"
					android:layout_centerHorizontal="true"
					>
				</Button>
			</RelativeLayout>
			
			    
			<RelativeLayout
				android:id="@+id/layout_tip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="12.0dip"
				android:layout_marginTop="30.0dip"
				android:layout_marginRight="12.0dip"
				android:layout_below="@+id/layout_btn_addcard"
				android:layout_centerHorizontal="true"
				>
				<ImageView
					android:textColor="@color/anzhi_cFF000000"
					android:id="@+id/img_title"
					android:background="@drawable/upomp_tbow_tips_title"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					>
				</ImageView>
				<ImageView
						android:id="@+id/imageView_tbow_pay_tips_title_youqingtishi"
						android:background="@drawable/upomp_tbow_tips_title2"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_below="@+id/img_title"
						>
					</ImageView>
				<RelativeLayout
					android:id="@+id/layout_tip_content"
					android:background="@drawable/upomp_tbow_tips_bg"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/imageView_tbow_pay_tips_title_youqingtishi"
					
					>
					<TextView
					    android:id="@+id/tv_nocard_tip"
						android:textSize="14.0sp"
						android:textColor="@color/anzhi_cFF666666"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10.0dip"
						android:layout_marginRight="10.0dip"
						android:text="@string/yl_add_bind_card"
						>
					</TextView>
					<TextView
						android:textSize="14.0sp"
						android:textColor="@color/anzhi_cFF666666"
						android:id="@+id/tv_hadcardlist_tip"
						android:visibility="gone"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10.0dip"
						android:layout_marginRight="10.0dip"
						android:text="@string/yl_add_bind_card_text"
						>
					</TextView>
				</RelativeLayout>
				<ImageView
					android:textColor="@color/anzhi_cFF000000"
					android:background="@drawable/upomp_tbow_tips_bot"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/layout_tip_content"
					>
				</ImageView>
			</RelativeLayout>
			
		</RelativeLayout>
		</ScrollView>
</LinearLayout>
