<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_add_result"
	android:background="@color/anzhi_c00000000"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
			<RelativeLayout
				android:id="@+id/rl_tv_title"
				android:background="@drawable/upomp_tbow_card_info_title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15.0dip"
				android:layout_marginTop="20.0dip"
				android:layout_marginRight="15.0dip"
				>
				<TextView
					android:textSize="20.0sp"
					android:textColor="@color/anzhi_cFFFFFFFF"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10.0dip"
					android:text="@string/yl_lookafter_yue_now"
					android:layout_centerVertical="true"
					>
				</TextView>
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/rl_card_main"
				android:background="@drawable/upomp_tbow_card_info_bg"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15.0dip"
				android:layout_marginRight="15.0dip"
				android:layout_below="@+id/rl_tv_title"
				>
				<RelativeLayout
					android:id="@+id/rl_card_num"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="3.0dip"
					>
					<RelativeLayout
						android:id="@+id/rl_tv_card_num"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						>
						<TextView
							android:textSize="15.0sp"
							android:textColor="@color/anzhi_cFF000000"
							android:id="@+id/tv_card_num"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10.0dip"
							android:text="@string/yl_card_num_1_wei"
							>
						</TextView>
					</RelativeLayout>
					<RelativeLayout
						android:id="@+id/rl_tv_real_card_num"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5.0dip"
						android:layout_marginRight="5.0dip"
						android:layout_toRightOf="@+id/rl_tv_card_num"
						>
						<TextView
							android:textSize="15.0sp"
							android:textColor="@color/anzhi_cFF000000"
							android:id="@+id/tv_real_card_num"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:singleLine="true"
							android:layout_centerVertical="true"
							>
						</TextView>
					</RelativeLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/rl_card_pass_main"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="3.0dip"
					android:layout_below="@+id/rl_card_num"
					>
					<RelativeLayout
						android:id="@+id/rl_tv_card_pass"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						>
						<TextView
							android:textSize="15.0sp"
							android:textColor="@color/anzhi_cFF000000"
							android:id="@+id/tv_card_pass"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10.0dip"
							android:text="@string/yl_card_psw_wei"
							>
						</TextView>
					</RelativeLayout>
					<RelativeLayout
						android:id="@+id/rl_btn_card_pass"
						android:background="@drawable/upomp_tbow_input_bg"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5.0dip"
						android:layout_marginRight="5.0dip"
						android:layout_toRightOf="@+id/rl_tv_card_pass"
						>
						<Button
							android:textColor="@color/anzhi_cFF000000"
							android:gravity="left|center"
							android:id="@+id/btn_card_pass"
							android:background="@color/anzhi_c00000000"
							android:layout_width="fill_parent"
							android:layout_height="40.0dip"
							android:hint="@string/yl_card_psw"
							>
						</Button>
					</RelativeLayout>
				</RelativeLayout>
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/rl_bot_bg"
				android:background="@drawable/upomp_tbow_card_info_bot"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15.0dip"
				android:layout_marginRight="15.0dip"
				android:layout_below="@+id/rl_card_main"
				>
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/rl_bot_btn"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15.0dip"
				android:layout_below="@+id/rl_bot_bg"
				>
				<RelativeLayout
					android:id="@+id/rl_btn_check_balance"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20.0dip"
					>
					<Button
						android:textSize="20.0sp"
						android:textColor="@color/anzhi_cFFFFFFFF"
						android:id="@+id/btn_check_balance"
						android:background="@drawable/upomp_tbow_btn_enter"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15.0dip"
						android:text="@string/yl_lookafter_yue_now"
						android:layout_alignParentLeft="true"
						>
					</Button>
					<Button
						android:textSize="20.0sp"
						android:textColor="@color/anzhi_cFFFFFFFF"
						android:id="@+id/rl_btn_back"
						android:background="@drawable/upomp_tbow_btn_esc"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="15.0dip"
						android:text="@string/yl_return"
						android:layout_alignParentRight="true"
						>
					</Button>
				</RelativeLayout>
			</RelativeLayout>
			
			    <!-- 底部提示 -->
			    			<RelativeLayout
				android:id="@+id/layout_tip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="12.0dip"
				android:layout_marginTop="30.0dip"
				android:layout_marginRight="12.0dip"
				android:layout_below="@+id/rl_bot_btn"
				android:layout_centerHorizontal="true"
				>
				<ImageView
					android:textColor="@color/anzhi_cFF000000"
					android:id="@+id/img_title"
					android:background="@drawable/upomp_tbow_tips_title"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					>
				</ImageView>
				<ImageView
						android:id="@+id/imageView_tbow_pay_tips_title_youqingtishi"
						android:background="@drawable/upomp_tbow_tips_title2"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_below="@+id/img_title"
						>
					</ImageView>
				<RelativeLayout
					android:id="@+id/layout_tip_content"
					android:background="@drawable/upomp_tbow_tips_bg"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/imageView_tbow_pay_tips_title_youqingtishi"
					
					>
					<TextView
					    android:id="@+id/tv_nocard_tip"
						android:textSize="14.0sp"
						android:textColor="@color/anzhi_cFF666666"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10.0dip"
						android:layout_marginRight="10.0dip"
						android:text="@string/yl_lookafter_yue_tishi"
						>
					</TextView>
				</RelativeLayout>
				<ImageView
					android:textColor="@color/anzhi_cFF000000"
					android:background="@drawable/upomp_tbow_tips_bot"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/layout_tip_content"
					>
				</ImageView>
			</RelativeLayout>
			    
		</RelativeLayout>
	</ScrollView>
</LinearLayout>
