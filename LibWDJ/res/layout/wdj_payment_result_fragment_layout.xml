<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dip"
    android:paddingRight="16dip"
    android:paddingTop="16dip"
    android:paddingBottom="24dip" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <ImageView
		    android:id="@+id/payment_result_icon"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true" />
        
        <TextView
            android:id="@+id/payment_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wandou_font_color_black"
            android:textSize="22sp"
            android:layout_toRightOf="@id/payment_result_icon"
            android:layout_marginLeft="12dip"
            android:layout_centerVertical="true" />
        
        <TextView
            android:id="@+id/payment_result_feedback_link_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/wandoujia_help_text"
            android:textSize="14sp"
	    	android:textColor="@color/wandou_font_hint_color_grey" />
    </RelativeLayout>
	
    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginTop="16dip"
        android:layout_marginBottom="28dip"
        android:background="@color/wandou_green" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginBottom="32dip"
        android:scrollbarStyle="outsideInset" >
        
        <TextView
	        android:id="@+id/payment_result_information"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="14sp"
	        android:textColor="@color/wandou_font_color_grey" />
    </ScrollView>
	
    <Button
        android:id="@+id/payment_result_back_to_game_button"
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:text="@string/back_to_game"
        android:textSize="18sp"
        android:textColor="@color/wandou_font_color_white"
        android:background="@drawable/wdj_payment_general_button_background" />
</LinearLayout>
