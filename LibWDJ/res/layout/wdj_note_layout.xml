<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:fillViewport="true"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/account_image_margin"
            android:layout_weight="0.5"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size" />

        <Button
            android:id="@+id/back"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/large_button_height"
            android:layout_marginLeft="@dimen/account_image_margin"
            android:layout_marginRight="@dimen/account_image_margin"
            android:layout_marginBottom="@dimen/account_image_margin"
            android:background="@drawable/wdj_button"
            android:gravity="center"
            android:text="@string/back_button"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size" />
    </LinearLayout>

</LinearLayout>