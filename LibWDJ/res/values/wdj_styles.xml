<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DialogActivity" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Styles for 320*480 size -->
    <style name="AlipayBGCanvas320x480">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--
	<item name="android:layout_marginTop">2dp</item>
	<item name="android:layout_marginBottom">2dp</item>
	<item name="android:layout_marginLeft">2dp</item>
	<item name="android:layout_marginRight">2dp</item>
        -->
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="AlipayInputCanvas320x480">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="InputLongNameTextBeforeEdit320x480">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/TextColorGray</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="InfoText320x480">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/TextColorRed</item>
        <item name="android:textSize">16dp</item>
	</style>

    <style name="AlipayInputLongNameText320x480">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/TextColorGray</item>
        <item name="android:textSize">16dp</item>
        <!--
	<item name="android:layout_centerVertical">true</item>
	<item name="android:singleLine">true</item>
	<item name="android:ellipsize">marquee</item>
        -->
    </style>

    <style name="InputLongNameBeforeEditText320x480">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/TextColorGray</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AlipayInputContentText320x480">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/TextColorGray</item>
        <item name="android:textSize">16dp</item>
        <!--
	<item name="android:layout_centerVertical">true</item>
	<item name="android:singleLine">true</item>
	<item name="android:ellipsize">marquee</item>
        -->
    </style>

    <style name="AlipayDealQueryContentText320x480">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/TextColorGray</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AlipayNormalText320x480">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/TextColorGray</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AlipayListInfoMoneyText320x480">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/TextColorGray</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">right</item>
        <!--
	<item name="android:layout_centerVertical">true</item>
	<item name="android:ellipsize">marquee</item>
        -->
    </style>

    <style name="AlipayListInfoCenterText320x480">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/TextColorGray</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <!--
	<item name="android:layout_centerInParent">true</item>
	<item name="android:ellipsize">marquee</item>
        -->
    </style>

    <style name="AlipayListInfoLineText320x480">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/TextColorGray</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">16dp</item>
        <!--
	<item name="android:textStyle">bold</item>
	<item name="android:ellipsize">marquee</item>
        -->
    </style>

    <style name="AlipayMoneyUnit320x480">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/TextColorGray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">16dp</item>
        <!-- <item name="android:layout_centerVertical">true</item> -->
    </style>

    <style name="AlipayInputEditText320x480">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">64</item>
        <item name="android:textSize">16dp</item>
        <!-- <item name="android:layout_centerVertical">true</item> -->
    </style>

    <style name="AlipayLoginPasswordInputEditText320x480">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
        <item name="android:password">true</item>
        <item name="android:textSize">16dp</item>
        <!-- <item name="android:layout_centerVertical">true</item> -->
    </style>

    <style name="AlipayEditText320x480">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35dip</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="AlipayMoneyInputEditText320x480">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">64</item>
        <item name="android:numeric">decimal</item>
        <item name="android:textSize">16dp</item>
        <!-- <item name="android:layout_centerVertical">true</item> -->
    </style>

    <style name="AlipayNormalButtonStyle320x480">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/TextColorWhite</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="AlipayRadioButtonStyle320x480">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/TextColorBlack</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="AlipayInfoText320x480">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/TextColorGray</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="login_input_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:background">@drawable/wdj_searchbox</item>
        <item name="android:textColorHint">@color/ade_grey</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/normal_margin</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="mini_input_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
        <item name="android:background">@drawable/wdj_searchbox</item>
        <item name="android:textColorHint">@color/ade_grey</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:paddingLeft">@dimen/xsmall_margin</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="main_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/large_button_height</item>
        <item name="android:layout_margin">@dimen/xsmall_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/wdj_button</item>
        <item name="android:padding">@dimen/xsmall_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="sub_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/large_button_height</item>
        <item name="android:layout_margin">@dimen/xsmall_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/wdj_button_grey</item>
        <item name="android:padding">@dimen/xsmall_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

</resources>